<?xml version="1.0" encoding="utf-8"?>
<csx.haha.com.common.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="1dp">

    <ImageView
        android:id="@+id/im_image"
        android:contentDescription="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <View
        android:id="@+id/view_shade"
        android:background="@color/black_alpha_112"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"

        tools:visibility="visible"
        />
    <!-- tools:visibility="visible"  只在调试时生效-->

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="end"
        android:layout_margin="@dimen/len_2"
        android:button="@drawable/sel_cb_circle"
        android:clickable="false"
        android:drawablePadding="0dp"
        android:enabled="false"
        android:padding="0dp"
        android:visibility="gone"
        app:buttonTint="@color/cb_gallery"

        tools:visibility="visible"
        />
    <!-- tools:visibility="visible"  只在调试时生效-->
</csx.haha.com.common.widget.SquareLayout>